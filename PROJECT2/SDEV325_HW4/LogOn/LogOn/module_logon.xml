<?xml version="1.0" encoding="UTF-8"?>
<project name="module_logon" default="compile.module.logon">
  <dirname property="module.logon.basedir" file="${ant.file.module_logon}"/>
  
  <property name="module.jdk.home.logon" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.logon" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.logon" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.logon" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="logon.output.dir" value="${module.logon.basedir}/out/production/LogOn"/>
  <property name="logon.testoutput.dir" value="${module.logon.basedir}/out/test/LogOn"/>
  
  <path id="logon.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="logon.module.production.classpath">
    <path refid="${module.jdk.classpath.logon}"/>
    <path refid="library.java_ee_6-java_ee_6.classpath"/>
    <path refid="library.javax.mail.classpath"/>
  </path>
  
  <path id="logon.runtime.production.module.classpath">
    <pathelement location="${logon.output.dir}"/>
    <path refid="library.java_ee_6-java_ee_6.classpath"/>
    <path refid="library.javax.mail.classpath"/>
  </path>
  
  <path id="logon.module.classpath">
    <path refid="${module.jdk.classpath.logon}"/>
    <pathelement location="${logon.output.dir}"/>
    <path refid="library.java_ee_6-java_ee_6.classpath"/>
    <path refid="library.javax.mail.classpath"/>
  </path>
  
  <path id="logon.runtime.module.classpath">
    <pathelement location="${logon.testoutput.dir}"/>
    <pathelement location="${logon.output.dir}"/>
    <path refid="library.java_ee_6-java_ee_6.classpath"/>
    <path refid="library.javax.mail.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.logon">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.logon">
    <patternset refid="excluded.from.module.logon"/>
  </patternset>
  
  <path id="logon.module.sourcepath">
    <dirset dir="${module.logon.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.logon" depends="compile.module.logon.production,compile.module.logon.tests" description="Compile module LogOn"/>
  
  <target name="compile.module.logon.production" depends="register.custom.compilers" description="Compile module LogOn; production classes">
    <mkdir dir="${logon.output.dir}"/>
    <javac2 destdir="${logon.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.logon}/javac">
      <compilerarg line="${compiler.args.logon}"/>
      <bootclasspath refid="logon.module.bootclasspath"/>
      <classpath refid="logon.module.production.classpath"/>
      <src refid="logon.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.logon"/>
    </javac2>
    
    <copy todir="${logon.output.dir}">
      <fileset dir="${module.logon.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.logon.tests" depends="register.custom.compilers,compile.module.logon.production" description="compile module LogOn; test classes" unless="skip.tests"/>
  
  <target name="clean.module.logon" description="cleanup module">
    <delete dir="${logon.output.dir}"/>
    <delete dir="${logon.testoutput.dir}"/>
  </target>
</project>